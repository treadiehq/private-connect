# Database connection
DATABASE_URL="postgresql://securelog:securelog@localhost:5432/securelog"

# API server port (optional, default: 3001)
PORT=3001

# ============================================
# Production settings (optional for local dev)
# ============================================

# Set to "production" to enable real email sending
NODE_ENV=development

# Resend API key for email auth (get one at https://resend.com)
RESEND_API_KEY=

# Email sender address (must be verified in Resend)
EMAIL_FROM="Private Connect <noreply@yourdomain.com>"

# Public URL for magic links
APP_URL="https://yourdomain.com"
